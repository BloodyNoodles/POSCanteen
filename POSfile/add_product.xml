<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddProductActivity"
    android:background="@android:color/white">

    <!-- App Bar with Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:background="#00128E"
        android:padding="0dp">

        <!-- Hamburger Menu Icon Placeholder -->
        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:src="@drawable/baseline_menu_24"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            android:contentDescription="Menu button" />

        <!-- Title: Add a Product -->
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginRight="50dp"
            android:text="Add a Product"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Product Image"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:gravity="center">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Add Image"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/productName"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@drawable/border_product"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category (Items)"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <LinearLayout

        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:background="@drawable/item_border"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#5A5A5A"
            android:spinnerMode="dropdown"
            />

        <!-- Add Category Button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#D3D3D3"/>
    </LinearLayout>

    <!-- Quantity Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/quantity_border"
        android:layout_gravity="center"
        android:backgroundTint="#f4f6fc"
        android:hint="  Quantity (Stock)"
        android:inputType="number"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/description_border"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:hint="  Description (Optional)"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:backgroundTint="#f4f6fc" />

    <!-- Selling Price Input -->

    <!-- Buttons: Cancel and Add -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selling Price"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/sellingPriceInput"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/sell_border"
        android:layout_marginTop="3dp"
        android:backgroundTint="#f4f6fc"
        android:hint="  â‚±"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="#D4AF37"
            android:text="Cancel"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Add"
            android:textSize="20sp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#D4AF37"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
