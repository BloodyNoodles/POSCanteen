<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Menu -->
        <!-- Quantity Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUANTITY"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/quanti_border"
                android:padding="8dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/decrease_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/quantity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/increase_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Adds On Section -->
        <TextView
            android:id="@+id/addons_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDS ON"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#0000FF"
            android:padding="8dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/addon_pearl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pearl"
                android:backgroundTint="#32CD32"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/addon_nata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nata"
                android:backgroundTint="#1E90FF"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/addon_coffee_jelly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coffee jelly"
                android:backgroundTint="#0000FF"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/addon_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#ADD8E6"
                android:text="nothing"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Sizes Section -->
        <TextView
            android:id="@+id/sizes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIZES"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#0000FF"
            android:padding="8dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/size_8oz"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="8oz"
                    android:backgroundTint="#B0C4DE"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/size_8oz_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/size_12oz"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="12oz"
                    android:backgroundTint="#808080"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/size_12oz_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/size_16oz"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="16oz"
                    android:backgroundTint="#32CD32"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/size_16oz_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:backgroundTint="#FFD700"
                android:textColor="#000000"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Order and Checkout Section -->
        <TextView
            android:id="@+id/current_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Order: 0"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:padding="8dp" />

        <Button
            android:id="@+id/button_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:backgroundTint="#800080"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>
