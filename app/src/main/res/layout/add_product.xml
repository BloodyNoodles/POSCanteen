<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/addProduct"
    tools:context=".AddProductActivity"

    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:background="#00128E"
        android:padding="0dp">

        <!-- Hamburger Menu Icon -->
        <ImageButton
            android:id="@+id/menubtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:src="@drawable/baseline_menu_24"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            android:contentDescription="Menu button" />

        <!-- Title: Add a Product -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginRight="50dp"
            android:text="Add a Product"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- ScrollView for Product Form Content -->
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Bar with Title -->



            <!-- Form Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Product Image"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/uploadedImage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Add Image"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/selectedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone" /> <!-- Initially hidden -->
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

                <EditText
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/border_product"

                    android:paddingStart="20sp"
                    android:hint="Product Name"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category (Items)"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:background="@drawable/item_border"
                android:gravity="center_vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snacks" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Essentials" />

                </RadioGroup>

                <!-- Add Category Button -->
                <Button
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="#D3D3D3"/>
            </LinearLayout>

                <!-- Container for Add-ons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    >

                    <!-- Title: Adds On -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adds on"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp" />

                    <!-- Container to add dynamic EditText inputs -->
                    <LinearLayout
                        android:id="@+id/addonContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp" />

                    <!-- Horizontal LinearLayout for Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"> <!-- Align button to the right -->

                        <!-- Button to add new Adds On -->
                        <Button
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/addAddonButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Adds On"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="@color/blue"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Container for Sizes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        >

                        <!-- Title: Sizes -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sizes"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="start"
                            />

                        <!-- Container to add dynamic size EditText inputs -->
                        <LinearLayout
                            android:id="@+id/sizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            />

                        <!-- Button to add new Sizes -->
                        <Button
                            android:id="@+id/addSizeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Size"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="@color/blue"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>



                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <EditText
                android:paddingStart="20sp"
                android:id="@+id/descriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/description_border"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:hint="  Description (Optional)"
                android:inputType="textMultiLine"
                android:minLines="3" />

            <!-- Selling Price Input -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:text="Selling Price"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:paddingStart="20sp"
                android:id="@+id/sellingPriceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/sell_border"
                android:layout_marginTop="3dp"
                android:hint="₱"
                android:inputType="numberDecimal" />

            <!-- Buttons for Add and Cancel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                  android:paddingHorizontal="30sp"

                    android:backgroundTint="#001283"
                    android:text="Cancel"
                    android:textSize="17sp"

                    android:textColor="@android:color/white" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:paddingHorizontal="30sp"
                    android:text="Add"
                    android:textSize="17sp"
                    android:backgroundTint="#001283"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Side Menu Overlay (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/sideMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="10dp"

         /> <!-- Initially hidden, can be shown dynamically -->

</RelativeLayout>
