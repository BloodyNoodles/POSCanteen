<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:background="#00128E">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:src="@drawable/baseline_menu_24"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ORDER #"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textSize="20dp"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="All categories"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#750000"
                android:layout_marginStart="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#169D53"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="DRINK MENU"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="SNACK MENU"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#750000"
                android:layout_marginStart="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="ESSENTIALS MENU"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#169D53"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"> <!-- This will ensure the price column is stretched to fill space evenly -->


            <!-- Table Content -->
            <TableRow>


                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">

                    <!-- ImageButton -->
                    <ImageButton
                        android:id="@+id/item1Btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                    <!-- TextView for overlay text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="item1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </FrameLayout>


                <ImageButton
                    android:id="@+id/item2Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="item1"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/item3Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="item1"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow>
                <ImageButton
                    android:id="@+id/item4Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="item1" />

                <ImageButton
                    android:id="@+id/item5Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="item1" />

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <!-- ImageButton -->
                    <ImageButton
                        android:id="@+id/item6Btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:scaleType="centerCrop"
                        />

                    <!-- Text overlay -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="item1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </FrameLayout>

            </TableRow>
            <TableRow>

                <ImageButton
                    android:id="@+id/item7Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="item1" />

                <ImageButton
                    android:id="@+id/item8Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="item1" />

                <ImageButton
                    android:id="@+id/item9Btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="item1"
                    android:textAlignment="center" />
            </TableRow>
            <!-- You can add more rows as needed -->

        </TableLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checkoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Check Out"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#169D53"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Order: 2"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="23dp"/>


        </FrameLayout>



    </RelativeLayout>


</LinearLayout>